<div class="user signup">
<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
    <%= form_for(@user) do |f| %>
      <%= f.label :username %>
      <%= f.text_field :username %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
</div>
</div>